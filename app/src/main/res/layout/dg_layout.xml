<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical"
    android:layout_marginLeft="5px"
    android:layout_marginRight="5px"
    android:weightSum="1"
    tools:context="com.example.administrator.cyzapp.MainActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:background="#E0E0E0"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fb1_1" />

            <EditText
                android:id="@+id/dgetspname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="商品名称"
                android:background="@null"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fb1_1" />

            <EditText
                android:id="@+id/dgetspnumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="商品数量"
                android:background="@null"
                android:layout_gravity="center"
                android:inputType="number"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:layout_marginTop="50px">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fb1_1" />

            <EditText
                android:id="@+id/dgetshaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="收货地址"
                android:background="@null"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fb1_1" />

            <EditText
                android:id="@+id/dgetshphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="收货电话"
                android:background="@null"
                android:layout_gravity="center"
                android:inputType="number"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:layout_marginTop="50px">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fb1_1" />

            <EditText
                android:id="@+id/dgetshsj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="收货时间"
                android:background="@null"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fb1_1" />

            <EditText
                android:id="@+id/dgetbzly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="备注留言"
                android:background="@null"
                android:layout_gravity="center"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:layout_marginTop="60px"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:gravity="bottom">

        <TextView
            android:layout_width="0px"
            android:layout_weight="0.4"
            android:layout_height="wrap_content"
            android:text="小费"
            android:textSize="20dp"
            android:paddingTop="20px"
            android:layout_gravity="center"
            android:layout_marginLeft="16px"/>
        <TextView
            android:layout_width="0px"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textSize="20dp"
            android:textColor="#FF7F00"
            android:layout_marginLeft="-20px"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/dgetxf"
            android:layout_width="0px"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:hint="请输入赏金"
            android:background="@null"
            android:layout_gravity="center"
            android:inputType="number"/>

        <Button
            android:id="@+id/dgbtok"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="确定"
            android:textColor="#FFFFFF"
            android:background="#FF7F00"
            android:textSize="25dp"/>
    </LinearLayout>




</LinearLayout>
