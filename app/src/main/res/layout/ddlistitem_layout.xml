<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:textSize="50px"
        android:id="@+id/dditemtexttitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="代领快递"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="10dp"
            android:src="@drawable/dlimg"
            android:layout_width="250px"
            android:layout_height="300px"
            android:id="@+id/ddlistimg"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/dditemtexttime"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="下单时间：2018-01-06 12：12"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/dditemtextshdz"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="男生宿舍六栋"/>

                <ImageView
                    android:layout_marginTop="17dp"
                    android:layout_width="48px"
                    android:layout_height="48px"
                    android:src="@drawable/chat"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/dditemimgchat" />
            </LinearLayout>


            <TextView
                android:id="@+id/dditemtextxf"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="￥1"/>

           <Button
          android:id="@+id/ddlistbtjd"
          android:layout_gravity="right"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="立即接单"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
