                                android:textColor="#000000"
                                android:textSize="20dp" />

                            <ImageView
                                android:id="@+id/imgcall1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
