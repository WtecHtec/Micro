                android:layout_marginTop="10px"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_marginTop="10px"
                    android:text="接单人信息"
                    android:textColor="#000000"
                    android:textSize="20dp"
